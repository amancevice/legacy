<%= erb :directions %>
<br />
<div class="g--half">
  <h3>Key</h3>
  <br />
  <%= erb :key %>
</div>
<div class="g--half g--last">
  <h3>Log in</h3>
  <br/>
  <form class="swn--form" action='/login' method='post'>
    <div class="swn--form-input">
      <input type='name' name='name' placeholder='name' autocomplete='name' required />
      <span class="highlight"></span>
      <span class="bar"></span>
    </div>

    <div class="swn--form-input">
      <input type='password' name='password' placeholder='password' autocomplete='password' required />
      <span class="highlight"></span>
      <span class="bar"></span>
    </div>
    <br/>
    <button class="button--primary" type='submit'>Sign in</button>
  </form>
  <a href="/signup" class="button--secondary">Sign up!</a>
</div>
